source "$(asdf direnv hook asdf)"

# Experimental automation loading
#
if [[ -f .envrc.private ]]; then
	source_env .envrc.private
elif [[ -f shell.nix ]]; then
	use nix
elif [[ -f .tool-versions ]]; then
	use asdf
fi

